{
  "manifest_version": 3,
  "name": "Dual Subs",
  "version": "2.0",
  "description": "Dual subtitles for net20.cc/net51.cc JW Player",
  "action": { "default_popup": "popup.html", "default_title": "Dual Subs Status" },
  "content_scripts": [
    {
      "matches": ["https://net20.cc/*", "https://net51.cc/*"],
      "exclude_matches": ["https://net20.cc/verify*"],
      "js": ["iframe-subs.js", "content.js"],
      "all_frames": true,
      "run_at": "document_start"
    }
  ],
  "background": { "service_worker": "background.js" },
  "permissions": ["activeTab", "storage", "downloads"],
  "host_permissions": ["https://net20.cc/*", "https://net51.cc/*"],
  "web_accessible_resources": [
    {
      "resources": ["iframe-subs.js", "content.js"],
      "matches": ["https://net20.cc/*", "https://net51.cc/*"]
    }
  ]
}
